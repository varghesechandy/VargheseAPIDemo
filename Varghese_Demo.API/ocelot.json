{
  "Routes": [
    {
      "DownstreamPathTemplate": "/bank",
      "DownstreamScheme": "https",
      "DownstreamHttpMethods": [ "POST" ],
      "DownstreamHostAndPorts": [
        {
          "Host": "bankmockapi.azurewebsites.net",
          "Port": "443"
        }
      ],
      "UpstreamPathTemplate": "/processpayment",
      "UpstreamHttpMethods": [ "POST" ],
      "DelegatingHandlers": [ "GatewayHandler" ],

      "HttpHandlerOptions": {
        "AllowAutoRedirect": true
      }
    }
  ],

  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:55555"
  }
}
